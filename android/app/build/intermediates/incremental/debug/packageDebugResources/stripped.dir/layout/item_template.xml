        <TextView android:id="@+id/tvPremiumBadge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/bg_premium_badge" android:paddingHorizontal="10dp" android:paddingVertical="4dp" android:text="PRO" android:textColor="@color/white" android:textSize="10sp" android:textStyle="bold" android:visibility="gone" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" />

